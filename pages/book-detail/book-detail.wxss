/* pages/book-detail/book-detail.wxss */

.container {
  background-color: #f5f5f5;
  width: 100%;
}


.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: #fff;
  padding-top: 40rpx;
  padding-bottom: 40rpx;
}

.title {
  color: #2f2f2f;
  margin-top: 20rpx;
  font-size: 38rpx;
  font-weight: 600;
}

.author {
  font-size: 28rpx;
  color: #999;
  /* margin-bottom: 30rpx; */
}

.header image {
  width: 200rpx;
  height: 300rpx;
  box-shadow: 2px 2px 3px #e3e3e3;
}

.sub-container {
  width: 690rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 30rpx;
  background-color: #fff;
  padding: 30rpx;
}

.headline {
  font-size: 30rpx;
  font-weight: 600;
  color: #2f2f2f;
  /* margin-top:30rpx; */
  margin-bottom: 20rpx;
}

.tag {
  margin-right: 15rpx;
  margin-bottom: 10rpx;
  border-radius: 15px !important;
}

.comment-container {
  display: flex;
  justify-content: flex-start;
  width: 100%;
  flex-wrap: wrap;
  padding: 0 30rpx;
}

.num {
  margin-left: 5px;
  font-size: 22rpx;
  color: #aaa;
}

.comment-container>v-tag:nth-child(1) view {
  background: #fffbdd;
}

.comment-container>v-tag:nth-child(2) view {
  background: #d5b7fd;
}


.content {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  margin-bottom: 100rpx;
  font-size: 28rpx;
  color: #666;
  text-indent: 56rpx;
}

.detail-container{
  width:100%;
  display:flex;
  flex-direction: row;
  justify-content: space-between;
  margin-bottom: 100rpx;
  font-size:20rpx;
  color:#666;
  padding: 0 60rpx;
}
.vertical{
  display:flex;
  flex-direction: column;
}
.description{
  color:#999;
  margin-right: 30rpx;
}
.post-container{
  height:100rpx;
  box-shadow: 1px -1px 1px #e3e3e3;
  position: fixed;
  width: 690rpx;
  background-color:#fff;
  bottom: 0;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 0 30rpx;
  justify-content: space-between;
}
.post-fake{
  display: flex;
  align-items: center;
  height: 60rpx;
  width: 460rpx;
  border: 1px solid #999;
  border-radius: 15px;
  font-size: 22rpx;
  padding-left: 20rpx;
}

.posting-container {
  bottom: 0;
  position: fixed;
  display: flex;
  flex-direction: column;
  align-items: center;
  /* width:690rpx; */
  background-color: #fff;
  width: 100%;
  z-index: 999;
}
.posting-container .comment-container {
  width: 690rpx;
  padding: 0 30rpx;
}

.comment-container > v-tag:first-child view {
  background-color: #fffbdd;
}

.posting-container .comment-container {
  padding: 40rpx 30rpx 0 30rpx;
}
.post-header > text:first-child {
  font-size: 28rpx;
  color: #bbb;
}

.cancel {
  color: #666;
}

.post-header text {
  padding: 25rpx;
}
.post {
  width: 690rpx;
  margin: 30rpx auto;
  height: 56rpx;
  background-color: #f5f5f5;
  border-radius: 15px;
  padding-left: 25rpx;
}
.post-header {
  width: 100%;
  border-bottom: 1px solid #f5f5f5;
  border-top: 1px solid #f5f5f5;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}