.container {
    background-color: #f5f5f5;
    width: 100%;
  }
  

.header{
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background-color: #fff;
    padding-top: 40rpx;
    padding-bottom: 40rpx;
}
